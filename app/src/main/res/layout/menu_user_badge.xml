<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/menu_user_picture"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@android:drawable/sym_def_app_icon" />

                    <ImageView
                        android:src="@drawable/left_menu_user_background"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        />

                    <ImageView
                        android:src="@drawable/left_menu_user_border"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="13dp"
                        />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-5dp"
                >

                <TextView
                    android:id="@+id/menu_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="android.studio@android.com"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                >

                <Button
                    android:id="@+id/settings"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="right|center"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_menu_settings"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:layout_marginTop="-20dp"
            >

            <Button
                android:id="@+id/add_new_view"
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:textAllCaps="false"
                android:textColor="@color/blue_1"
                android:drawableLeft="@drawable/ic_menu_plus"
                android:layout_gravity="right"
                android:text="Add new view"
                android:textStyle="normal"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>





